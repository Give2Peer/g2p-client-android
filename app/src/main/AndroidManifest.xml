<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.give2peer.give2peer"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera"       android:required="false" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />

    <!-- todo: required=false, and disable the map if OpenGL ES 2 is unavailable -->
    <!--       this is a very low-priority task as the map is a critical component -->
    <uses-feature android:glEsVersion="0x00020000"             android:required="true" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_48dp"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat"
        >

        <!-- Sugar ORM -->
        <meta-data
            android:name="DATABASE"
            android:value="give2peer.db" />
        <meta-data
            android:name="VERSION"
            android:value="7" /> <!-- Every time the database structure changes, increment this -->
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="org.give2peer.give2peer.entity" />

        <!-- Google API -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC9cBthk5qKbc_zW2TtjG9rjRZybzffYqU"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- The launcher immediately shows the map items around the user's location -->
        <activity
            android:name=".activity.MapItemsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Displays a grid of items, from closest to furthest -->
        <activity android:name=".activity.ListAroundActivity" >
        </activity>

        <!-- Uses a system intent to capture an image and provides a form to add a new item. -->
        <activity
            android:name=".activity.NewItemActivity"
            android:label="@string/title_activity_new_item"
            android:windowSoftInputMode="adjustPan|stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>

        <!-- App settings -->
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

    </application>

</manifest>
