<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    >

    <!--
    wrap_content:
    image is pixel-perfect, but not all phones will have the same space for the text.
    -->
    <com.rsv.widget.WebImageView
        android:id="@+id/mapMarkerInfoContentImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="6dp"
        android:visibility="gone"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/mapMarkerInfoContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/mapMarkerInfoContentExcerpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="2"
            />

        <TextView
            android:id="@+id/mapMarkerInfoContentWhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@color/md_grey_400"
            />

    </LinearLayout>

</LinearLayout>