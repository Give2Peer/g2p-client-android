<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            >

            <TextView
                android:id="@+id/loginTopTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Log on the server {server}."
                />

        </LinearLayout>

        <EditText
            android:id="@+id/loginUsernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="64"
            android:maxLines="1"
            android:inputType="text|textAutoComplete|textAutoCorrect"
            android:hint="@string/login_label_username"
            android:textColorHint="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/loginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="64"
            android:maxLines="1"
            android:inputType="text|textPassword"
            android:hint="@string/login_label_password"
            android:textColorHint="@android:color/darker_gray"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="false"
            >

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:id="@+id/loginProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                />

            <Button
                android:id="@+id/loginSendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_send_button"
                android:onClick="onSend"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="If you do not have an account, "
                android:id="@+id/textView5"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/loginRegisterButton"
                android:onClick="onRegister"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <!-- THE SUBMIT BUTTON AND THE SUBMISSION PROGRESSBAR -->

</LinearLayout>
