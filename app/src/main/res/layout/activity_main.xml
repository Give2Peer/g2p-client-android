<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/main_activity_top_message"-->
            <!--android:id="@+id/welcomeTextView"-->
            <!--/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:id="@+id/dumpTextView"
            android:enabled="false"
            android:visibility="gone"
            android:textColor="@color/primary_text_default_material_light"
            android:typeface="monospace"
            />

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="org.give2peer.karma.fragment.ServerChooserFragment"
            android:id="@+id/serverChooserFragment"
            />

        <!-- This is interesting: half the fragment is hidden if we set the height to another value -->
        <fragment
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:name="org.give2peer.karma.fragment.LocationChooserFragment"
            android:id="@+id/locationChooserFragment"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_find"
            android:id="@+id/findItemsButton"
            android:drawableStart="@drawable/ic_room_black_36dp"
            android:onClick="onListAroundMe"
            android:enabled="true"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_find_label"
            android:id="@+id/findTextHelper"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_map"
            android:id="@+id/mapItemsButton"
            android:drawableStart="@drawable/ic_map_black_36dp"
            android:onClick="onMapItems"
            android:enabled="true"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_map_label"
            android:id="@+id/mapTextHelper"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_give"
            android:id="@+id/giveItemButton"
            android:drawableStart="@drawable/ic_loyalty_black_36dp"
            android:onClick="onGiveItem"
            android:enabled="true"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_give_label"
            android:id="@+id/giveTextHelper"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_spot"
            android:id="@+id/spotItemButton"
            android:drawableStart="@drawable/ic_visibility_black_36dp"
            android:onClick="onSpotItem"
            android:enabled="true"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_spot_label"
            android:id="@+id/spotTextHelper"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            />

    </LinearLayout>
</ScrollView>