<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.give2peer.karma.activity.AboutActivity_"
    >

    <!-- TOOLBAR ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <include
        android:id="@+id/aboutToolbar"
        layout="@layout/toolbar"
        />


    <!-- CONTENT ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <LinearLayout
        android:id="@+id/aboutContentLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Karma is libre, not-for-profit software licenced under the public domain."
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/about_badges"
            android:contentDescription="No Copyright, Open-Source, Not for Profit"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/aboutWebsiteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_button_website"
                style="@style/Widget.AppCompat.Button.Small"
                />

            <Button
                android:id="@+id/aboutSourceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_button_source"
                style="@style/Widget.AppCompat.Button.Small"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/aboutReportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_button_report"
                style="@style/Widget.AppCompat.Button.Small"
                />

            <Button
                android:id="@+id/aboutEmailButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_button_email"
                style="@style/Widget.AppCompat.Button.Small"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8e8e8e"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="13dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Karma is built atop libre and awesome libraries listed below."
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="10dp"
                    android:text="
Apache Software License, Version 2.0 :\n
- Annotations (org.androidannotations)\n
- Location (com.yayandroid:LocationManager)\n
- Floating Action Button (com.shamanland:fab)\n
- Navigation (com.mikepenz:materialdrawer)\n
- Event Bus (org.greenrobot:eventbus)\n
- SugarDb (com.github.satyan:sugar)\n
- PrettyTime (org.ocpsoft.prettytime:prettytime)\n
- JodaTime (net.danlew:android.joda)\n
- Image View (com.github.rooseve:WebImageView)\n
- Onboarding (com.github.rubengees:introduction)"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="10dp"
                    android:autoLink="web"
                    android:text="The full text of the Apache 2.0 Licence is available at\nhttps://www.apache.org/licenses/LICENSE-2.0"
                    />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>
