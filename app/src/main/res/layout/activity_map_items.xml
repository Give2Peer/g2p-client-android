<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.give2peer.give2peer.activity.MapItemsActivity"
    >

    <fragment
        class="com.google.android.gms.maps.SupportMapFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/mapItemsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/mapItemsDrawFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <Button
            android:id="@+id/mapItemsDrawButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_find"
            android:onClick="onDrawButton"
            android:layout_gravity="left|bottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Internet is unavailable.\nPlease connect and try again."
            android:id="@+id/noInternetTextView"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/background_material_light"
            android:textColor="@color/primary_text_default_material_light"
            android:padding="5dp"
            android:textAlignment="center"
            android:visibility="gone"/>

    </FrameLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapItemsProgressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
